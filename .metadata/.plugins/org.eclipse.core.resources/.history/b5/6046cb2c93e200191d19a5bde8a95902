package webdriver;

import java.util.List;

import org.openqa.selenium.By;
import org.openqa.selenium.WebDriver;
import org.openqa.selenium.WebElement;
import org.openqa.selenium.chrome.ChromeDriver;
import org.openqa.selenium.support.ui.Select;

public class Dropdown {
	public static WebDriver driver;


	public static void main(String[] args) throws Exception{
		
		System.setProperty("webdriver.chrome.driver", "F:\\software\\chromedriver_win32 (1)\\chromedriver.exe");
		WebDriver driver=new ChromeDriver();
		driver.get("https://www.cleartrip.com");
		Thread.sleep(5000);
		//Collect all drop-downs
		List<WebElement> dll=
		    driver.findElements(By.tagName("select"));
		int len=dll.size();
		System.out.println(len);
		int vdcount=0;
		int ivdcount=0;
		for(int i=0;i<len;i++)
		{
		if(dll.get(i).isDisplayed())
		{
		vdcount=vdcount+1;
		}
		else
		{
		ivdcount=ivdcount+1;
		}
		}
		System.out.println(
		"visible  number of drop-downs: "+vdcount);
		System.out.println(
		"Invisible number of drop-downs: "+ivdcount);
		//close window
		driver.close();

		
		
		
		// TODO Auto-generated method stub

	}

}
